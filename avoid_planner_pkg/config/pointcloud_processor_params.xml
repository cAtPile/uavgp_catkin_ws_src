<!-- avoid_planner_pkg/config/pointcloud_processor_params.xml-->
<launch>  <!-- 唯一根元素：所有参数必须包裹在<launch>内 -->
    <!-- ============== 1. 传感器基础参数 ============== -->
    <param name="avoid_planner/max_sensor_range" type="double" value="50.0"/>
    <param name="avoid_planner/min_sensor_range" type="double" value="0.5"/>
    <param name="avoid_planner/voxel_grid_size" type="double" value="0.1"/>
    <param name="avoid_planner/statistical_filter_mean_k" type="int" value="10"/>
    <param name="avoid_planner/statistical_filter_std_dev" type="double" value="0.1"/>

    <!-- ============== 2. 坐标系与话题参数 ============== -->
    <param name="avoid_planner/lidar_frame_id" type="string" value="livox_frame"/>
    <param name="avoid_planner/body_frame_id" type="string" value="base_link"/>
    <param name="avoid_planner/lidar_topic" type="string" value="/lidsvox/lidar"/>

    <!-- ============== 3. 直方图参数（角度单位：度） ============== -->
    <param name="avoid_planner/azimuth_resolution_deg" type="double" value="190.0"/>
    <param name="avoid_planner/elevation_resolution_deg" type="double" value="10.0"/>
    <param name="avoid_planner/min_azimuth_deg" type="double" value="-180.0"/>
    <param name="avoid_planner/max_azimuth_deg" type="double" value="180.0"/>
    <param name="avoid_planner/min_elevation_deg" type="double" value="-15.0"/>
    <param name="avoid_planner/max_elevation_deg" type="double" value="15.0"/>
</launch>  <!-- 根元素闭合：无多余内容 -->